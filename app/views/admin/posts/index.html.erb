<h1>つぶやき一覧</h1>
<table class="table table-hober table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>つぶやき</th>
      <th>ユーザー名</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, admin_post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td><%= link_to post.user.name, admin_user_path(post.user.id) %></td>
          <td><%= "#{post.post_comments.count} 件" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>