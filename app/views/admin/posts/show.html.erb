<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ユーザー情報</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>プロフィール</th>
          <th><%= @user.profile %></th>
        </tr>
      
      </table>
    <%= link_to "ユーザー削除", admin_user_path(@user), method: :delete, data: { confirm: 'ユーザーを削除してよろしいですか？' },class:"btn btn-sm btn-danger" %>
    <%= link_to "ユーザー一覧へ", admin_dashboards_path, class:"btn btn-sm btn-primary" %>
    <%= link_to "つぶやき削除", admin_post_path(@post), method: :delete, data: { confirm: 'ユーザーを削除してよろしいですか？' },class:"btn btn-sm btn-danger" %>
    </div>
    <div class="col-md-8 offset-md-1"> 
      <h2>投稿詳細</h2>
        <% if @error_comment.present? %>
          <p>コメントを記載してください。</p>
          <ul>
            <% @error_comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>つぶやき</th>
            <th>ユーザー名</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <tr>
            <td><%= @post.title %></td>
            <td><%= @post.body %></td>
            <td><%= link_to @post.user.name, user_path(@post.user.id) %></td>
          </tr>
        </tbody>
      </table>
      <%= @post.created_at.strftime('%Y/%m/%d') %>
    
      <p>コメント件数：<%= @post.post_comments.count %></p>
      <% if @post.favorited_by?(current_user) %>
      <% end %>
      <% @post.post_comments.each do |post_comment| %>
        <div class= "row border-top">
          <div class= "col-md-3">
            <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
            <%= link_to post_comment.user.name, user_path(post_comment.user.id) %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
          </div>
          <div class= "col-md-7">
            <%= post_comment.comment %>
          </div>
          <div class= "col-md-2">
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
          </div>
        </div>
      <% end %>
      
      
    </div>
  </div>
</div>