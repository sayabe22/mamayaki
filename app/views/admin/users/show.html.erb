 <div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <h2>ユーザー情報</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>プロフィール</th>
          <th><%= @user.profile %></th>
        </tr>
      
      </table>
    <%= link_to "ユーザー削除", admin_user_path(@user), method: :delete, data: { confirm: 'ユーザーを削除してよろしいですか？' },class:"btn btn-sm btn-danger" %>
    <%= link_to "ユーザー一覧へ", admin_dashboards_path, class:"btn btn-sm btn-primary" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>つぶやき一覧</h1>
        <table class="table table-hober table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>つぶやき</th>
              <th colspan="3"></th>
            </tr>
          </thead>
                 
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, admin_post_path(post.id) %></td>
                <td><%= post.body %></td>
                <td><%= "#{post.post_comments.count} コメント" %></td>
              </tr>
            <% end %>
          </tbody>
                      
        </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
