<h1>ユーザー情報編集</h1>
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <label for="inputName">ユーザー名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %>
  <label for="profile">プロフィール</label>
  <%= f.text_area :profile, id:"profile", placeholder:"プロフィール" %>
  <label for="email">メールアドレス</label>
  <%= f.text_field :email, id:"email", placeholder:"メールアドレス" %>
<!--  <label for="password">パスワード</label>-->
 <!-- <%= f.text_field :encrypted_password, id:"password", placeholder:"パスワード" %> -->
  <%= f.submit "変更を保存" %>
<% end %>