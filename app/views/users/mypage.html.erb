<div>
  <%= flash[:notice] %>
</div>
<h2>ユーザー情報</h2>
<table class="table">
  <tr>
    <th>ユーザー名</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>プロフィール</th>
    <th><%= @user.profile %></th>
  </tr>
  <tr>
    <th>いいね一覧</th>
  </tr>
  <tr>
   <th>フォロー一覧</th>
  </tr>
</table>
<%= link_to "ユーザー情報編集", edit_user_path(@user.id) %>

<%=link_to "退会", user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？" %>
<h1>つぶやき一覧</h1>
  <table class="table table-hober table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>つぶやき</th>
        <th colspan="3"></th>
      </tr>
    </thead>
           
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
                
  </table>

