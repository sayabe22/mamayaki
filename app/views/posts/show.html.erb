<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3 ">

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>つぶやき</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to @post.user.name, user_path(@post.user.id) %></td>
            <td><%= link_to @post.title, post_path(@post.id) %></td>
            <td><%= @post.body %></td>
            <% if @post.user == current_user %>
              <td><%= link_to "Edit", edit_post_path(@post.id), class:"btn btn-sm btn-success" %> </td>
              <td><%= link_to "Destroy", post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>