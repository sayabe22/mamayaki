<h1>つぶやき一覧</h1>
  <table class="table table-hober table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>つぶやき</th>
        <th>ユーザー名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
           
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
          <td><%= link_to post.user.name, user_path(post.user.id) %></td>
        </tr>
      <% end %>
    </tbody>
                
  </table>