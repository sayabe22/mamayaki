<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'user_info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>つぶやき一覧</h1>
        <table class="table table-hober table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>つぶやき</th>
              <th colspan="3"></th>
            </tr>
          </thead>
                 
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td><%= post.body %></td>
                <td><%= "#{post.post_comments.count} コメント" %></td>
              </tr>
            <% end %>
          </tbody>
                      
        </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
