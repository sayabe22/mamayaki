<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/user_info', user: @user %>
      <%=link_to "退会", user_path(@user), method: :delete, "data-confirm" => "退会するとすべての登録データが削除されます。本当に退会しますか？",class:"btn btn-sm btn-danger" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1 >ユーザー情報編集</h1>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <label for="profile_image">ユーザー画像</label>
        <%= f.file_field :profile_image, accept: "image/*" %></br>
        <label for="inputName">ユーザー名</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名",class:"form-control" %>
        <label for="profile">プロフィール</label>
        <%= f.text_area :profile, id:"profile", placeholder:"プロフィール",class:"form-control" %>
        <label for="email">メールアドレス</label>
        <%= f.text_field :email, id:"email", placeholder:"メールアドレス",class:"form-control" %>
      <!--  <label for="password">パスワード</label>-->
       <!-- <%= f.text_field :encrypted_password, id:"password", placeholder:"パスワード" %> -->
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>