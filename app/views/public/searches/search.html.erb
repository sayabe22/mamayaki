<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/user_info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>検索結果一覧</h2>
      
      <table class="table table-hover table-inverse">
        <% if @range == "ユーザー" %>
          <thead>
            <tr>
              <th>ユーザー名</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= link_to user.name, user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <thead>
            <tr>
              <th>タイトル</th>
              <th>つぶやき</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td><%= post.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>